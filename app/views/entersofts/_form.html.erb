
<%= simple_form_for(@entersoft,wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :fullname,placeholder: true %>
    <%= f.input :fathername %>
    <%= f.input :email %>
    <%= f.input :mobilenumber %>
    <%= f.input :location %>
    <%= f.input :areureadytorelocate %>
    <%= f.input :btechpercentage %>
  </div>

  <div class="form-actions">
    
    <%= f.button :submit %>
  </div>
<% end %>
